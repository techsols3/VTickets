@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1 class="alert alert-primary text-center">All Movies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 border-primary mb-3">
            <div class="card mb-3">
                <div class="row">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @item.Name
                                @*@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {*@
                                <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                @* } *@
                            </h5>
                        </p>
                    </div>
                </div>
                </div>
                <div class="card-body p-2">
                    <div class="row">
                        <div class="col-12">
                            <div class="card-img-top">
                                <img src="@item.ImageUrl" width="100" alt="@item.Name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <p class="card-text">@item.Description</p>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-12 text-center">
                            <div class="row">
                                <div class="col-6">
                                    <b>Cinema: </b>
                                </div>
                                <div class="col-6">
                                    <p class="card-text">@item.Cinema.Name</p>
                                </div>
                            </div>
                          </div>
                        </div>
                    <div class="row">
                            <div class="col-12 text-center">
                                <div class="row">
                                    <div class="col-6">
                                        <b>Category: </b>
                                    </div>
                                    <div class="col-6">
                                        <p class="card-text">@item.MovieCategory</p>
                                    </div>
                                </div>
                           </div>
                        </div>
                    <div class="row">  
                        <div class="col-12 text-center">
                            <p class="card-text">
                                <div class="row">
                                    <div class="col-6">
                                        <b>Start Date: </b>
                                    </div>
                                    <div class="col-6">
                                        @item.StartDate.ToString("dd MMM yy")
                                    </div>
                                </div>
                            </p>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <div class="row">
                                <div class="col-6">
                                    <b>End Date: </b>
                                </div>
                                <div class="col-6">
                                    <p class="card-text">@item.EndDate.ToString("dd MMM yy")</p>
                                </div>
                            </div>
                           </div>
                    </div>
                    </div>
                <div class="row my-2">
                    <div class="col-12 text-center">
                        <div class="row">
                            <div class="col-6">
                                
                                <b>Status: </b>
                            </div>
                            <div class="col-6">
                                <p class="card-text ">
                                    @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                    {
                                        <span class="badge bg-success text-white px-3 py-1">AVAILABLE</span>
                                    }
                                    else if (DateTime.Now > item.EndDate)
                                    {
                                        <span class="badge bg-danger text-white px-3 py-1">EXPIRED</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-white px-3 py-1">UPCOMING</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <div class="row">
                                    <div class="col-8">
                                        <a class="btn btn-success text-white btn-sm @((DateTime.Now > item.EndDate) ? "disabled" : "")"
                                           asp-controller="Orders"
                                           asp-action="AddItemToShoppingCart"
                                           asp-route-id="@item.Id">
                                            <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a class="btn btn-outline-primary btn-sm float-right" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="bi bi-eye-fill"></i> Details
                                        </a>
                                    </div>

                                </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            }
</div>